{{> header user-posts="true"}}
<main>
    <div class="container">
        <div class="row">
            <div class="col-md-12 alerts"></div>
        </div>
        <div class="row row-mansory">
            {{#if posts}}
            {{#each posts}}
            <div class="col-lg-3 col-md-4 col-sm-6 col-mansory" data-post="{{_id}}">
                <div class="card post">
                    <img class="card-img-top" src="{{image_url}}" alt="Card image cap">
                    <div class="card-body">
                        <h4 class="card-title">{{description}}</h4>
                        <p class="thumbUp">
                            <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                            <span>{{likes}}</span>
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="#" data-id="{{_id}}" class="remove">Delete</a>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/if}}
        </div>
    </div>
</main>
{{> footer}}